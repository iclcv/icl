# - A macro returning the current bit architecture type

FUNCTION(CURRENT_ARCHITECTURE RESULT)

  IF(CMAKE_SIZEOF_VOID_P MATCHES "8")
    MESSAGE(STATUS "64-bit architecture detected")
    SET(${RESULT} "64_BIT_FOUND" PARENT_SCOPE)
  ELSE()
    MESSAGE(STATUS "32-bit architecture detected")
    SET(${RESULT} "32_BIT_FOUND" PARENT_SCOPE)
  ENDIF()
  
ENDFUNCTION()
